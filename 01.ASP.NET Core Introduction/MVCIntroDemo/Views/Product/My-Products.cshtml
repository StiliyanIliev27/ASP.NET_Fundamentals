@using MVCIntroDemo.Models.Product

@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "All products";
}

<div class="container-fluid">  
   
    <form asp-controller="Product" asp-action="My-Products" asp-area="" method="get"> 
        <div class="input-group" style="width: 287px; margin-bottom: 15px;">
            <input type="search" name="keyword" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon"/>
            <button type="submit" class="btn btn-outline-primary" data-mdb-ripple-init>Search</button>
        </div>
    </form>
    
    <div class="card" style="width: 18rem;">
        <div class="card-header">@ViewData["Title"]</div>
        <ul class="list-group list-group-flush">
            @foreach (var product in Model)
            {
                <li class="list-group-item">
                    N.@product.Id: @product.Name - @product.Price lv.
                </li>
            }
        </ul>
    </div>

</div>





